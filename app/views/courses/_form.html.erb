<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :"Course Number" %><br>
    <%= f.text_field :course_number %>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :instructor %><br>
    <% if @users != nil %>
    <%= f.select :instructor , @users.map { |user| [user.name, user.id] } %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :"Start Date (Time in UTC)" %><br>
    <%= f.datetime_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :"End Date (Time in UTC)" %><br>
    <%= f.datetime_select :end_date %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, ['Active','Inactive'] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
