<table>
 
  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.information %></td>
        <% if current_user.usertype == 'Instructor' %>
          <td><%= link_to 'Edit', edit_material_path(material) %></td>
          <td><%= link_to 'Delete', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>           
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.usertype != 'Student' %>
  <%= link_to 'Add new material', {:controller => "materials", :action => "new", :course_id => @course } %><br/>
<% end %>  

<%= link_to 'Back', my_courses_course_mappings_path %>
